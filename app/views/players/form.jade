#container-inner
	form(method="POST")#playerForm.form-horizontal
		fieldset
			legend #{title}
					
			.control-group
				label.control-label(for="email") Email Address:
				.controls
					input#email.span5(type="text", placeholder="", name="email", value=player.email)
					p.help-block The email address for the player.
			
			.control-group
				label.control-label(for="image") Profile Image (url):
				.controls
					input#image.span5(type="text", placeholder="", name="image", value=player.image)
	
			.control-group
				label.control-label(for="name") Player Name:
				.controls
					input#name.span5(type="text", placeholder="", name="name", value=player.name)
					p.help-block The name of the player.
	
			.control-group
				label.control-label(for="twitter") Twitter (url):
				.controls
					input#twitter.span5(type="text", placeholder="", name="twitter", value=player.twitter)
	
			.control-group
				label.control-label(for="facebook") Facebook (url):
				.controls
					input#facebook.span5(type="text", placeholder="", name="facebook", value=player.facebook)
	
			.control-group
				label.control-label(for="flickr") Flickr (url):
				.controls
					input#flickr.span5(type="text", placeholder="", name="flickr", value=player.flickr)
	
			.control-group
				label.control-label(for="tubmlr") Tumblr (url):
				.controls
					input#tubmlr.span5(type="text", placeholder="", name="tubmlr", value=player.tubmlr)
	
			.control-group
				label.control-label(for="youtube") YouTube (url):
				.controls
					input#youtube.span5(type="text", placeholder="", name="youtube", value=player.youtube)
	
			.control-group
				label.control-label(for="score") Score:
				.controls
					input#score.span5(type="text", placeholder="", name="score", value=player.score)
					p.help-block The score for the player.
		
		fieldset
			legend Player's Profile
	
			.control-group
				label.control-label(for="profile_0") Sunday Profile:
				.controls
					textarea#profile_0.span8(name="profile_0") !{player.profile_0}
	
			.control-group
				label.control-label(for="profile_1") Monday Profile:
				.controls
					textarea#profile_1.span8(name="profile_1") !{player.profile_1}
	
			.control-group
				label.control-label(for="profile_2") Tuesday Profile:
				.controls
					textarea#profile_2.span8(name="profile_2") !{player.profile_2}
	
			.control-group
				label.control-label(for="profile_3") Wednesday Profile:
				.controls
					textarea#profile_3.span8(name="profile_3") !{player.profile_3}
	
			.control-group
				label.control-label(for="profile_4") Thursday Profile:
				.controls
					textarea#profile_4.span8(name="profile_4") !{player.profile_4}
	
			.control-group
				label.control-label(for="profile_5") Friday Profile:
				.controls
					textarea#profile_5.span8(name="profile_5") !{player.profile_5}
	
			.control-group
				label.control-label(for="profile_6") Saturday Profile:
				.controls
					textarea#profile_6.span8(name="profile_6") !{player.profile_6}
	
		fieldset
			legend Opponent's Profile
	
			- for(var i=1; i<31; i++)
				.control-group
					label.control-label(for="opponent_profile_#{i}") Opponent Profile (June #{i}):
					.controls
						textarea(id='opponent_profile_'+i, class='span8', name='opponent_profile_'+i) !{player['opponent_profile_'+i]}
	
	
		.form-actions
			button.btn.btn-primary(type="submit") Submit
			|  
			a.btn(href="/players") Cancel