extends ../layout

block body
	#container-inner(data-game-id=game._id.toString())
		#header
			h2.lets Let's play
			h1
				- if(game.currentRound)
					a.next-round(title="Click here to get to the current move of this game!", href="/game/#{game._id}/#{game.currentRound}") FRENEMY
				- else
					a.next-round(title="Click here to see the results of this game!", href="/game/#{game._id}") FRENEMY
			h2.prompt
				| MOVE ##{round.number}
				br
				| pick one:
		
		
		#vote.cf
			a(href="/game/#{game._id}/#{round._id}/friend", class='vote friend '+(my_vote ? (my_vote.value == 'friend' ? 'chosen disabled' : 'strikethrough disabled') : 'active'))
				.avatar 
					.inner 
				h3 #{my_vote && my_vote.value == 'friend' ? 'you chose friend' : 'friend'}
			a(href="/game/#{game._id}/#{round._id}/enemy", class='vote enemy '+(my_vote ? (my_vote.value == 'enemy' ? 'chosen disabled' : 'strikethrough disabled') : 'active')) 
				.avatar 
					.inner
				h3 #{my_vote && my_vote.value == 'enemy' ? 'you chose enemy' : 'enemy'}

			if game.currentRound.toString() != round._id.toString()
				a.next-round(href="/game/#{game._id}/#{round._id}/complete") Round over! click to see results!
			//if !game.currentRound
			//	a.next-round(href="/game/#{game._id}/#{me._id}") click to see the results!
			//else if game.currentRound.toString() != round._id.toString()
			//	a.next-round(href="/game/#{game._id}/#{game.currentRound}/#{me._id}") click to play the current move!
		
	
		#scoring.cf
			h4.cf
				a#play-by-play-trigger.you
					i.icon-star 
					|  See the play-by-play of this game 
					i.icon-star 
				| Scoring Reminder
			ul.cf
				li#friend-friend
					.visuals
						span.friend
						span.friend
					.text
						span.points 15
						span.comma ,
						span.points 15
				li#friend-enemy
					.visuals
						span.friend
						span.enemy
					.text
						span.points -5
						span.comma ,
						span.points 25
				li#enemy-friend
					.visuals
						span.enemy
						span.friend
					.text
						span.points 25
						span.comma ,
						span.points -5
				li#enemy-enemy
					.visuals
						span.enemy
						span.enemy
					.text
						span.points 5
						span.comma ,
						span.points 5
	
	include ../panes