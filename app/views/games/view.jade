#container-inner
	#header
		h2.lets Let's play
		h1
			a.next-round(title="Click here to get to the current round of this game!", href="/games/#{game._id}/#{game.currentRound}/#{me._id}") FRENEMY
		h2.prompt
			| ROUND ##{round.number}
			br
			| pick one:
	
	
	#vote.cf
		a(href="/games/#{game._id}/#{round._id}/#{me._id}/friend", class='vote friend '+(my_vote ? (my_vote.value == 'friend' ? 'chosen disabled' : 'disabled') : 'active'))
			.avatar 
				.inner 
			h3 #{my_vote && my_vote.value == 'friend' ? 'you chose friend' : 'friend'}
		a(href="/games/#{game._id}/#{round._id}/#{me._id}/enemy", class='vote enemy '+(my_vote ? (my_vote.value == 'enemy' ? 'chosen disabled' : 'strikethrough disabled') : 'active')) 
			.avatar 
				.inner
			h3 #{my_vote && my_vote.value == 'enemy' ? 'you chose enemy' : 'enemy'}
	
