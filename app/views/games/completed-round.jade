extends ../layout

block body
	#container-inner
		#header
			h2.lets Let's play
			h1
				- if(game.currentRound)
					a.next-round(title="Click here to get to the current move of this game!", href="/game/#{game._id}/#{game.currentRound}") FRENEMY
				- else
					a.next-round(title="Click here to see the results of this game!", href="/game/#{game._id}") FRENEMY
			h2.prompt
				| MOVE ##{round.number}
				br
				| RESULTS:
		
		
		#vote.cf
			- if(round.completed)
				// Gotta populate my vote and their vote
				a(class=my_vote.value+' vote chosen disabled')
					.avatar 
						.inner 
					h3 #{my_vote && my_vote.value == 'friend' ? 'you chose friend' : 'you chose enemy'}
				a(class=their_vote.value+' vote chosen disabled')
					.avatar 
						.inner 
					h3 #{their_vote && their_vote.value == 'friend' ? 'they chose friend' : 'they chose enemy'}
			- else	
				a(href="/game/#{game._id}/#{round._id}/friend", class='vote friend '+(my_vote ? (my_vote.value == 'friend' ? 'chosen disabled' : 'disabled') : 'active'))
					.avatar 
						.inner 
					h3 #{my_vote && my_vote.value == 'friend' ? 'you chose friend' : 'friend'}
				a(href="/game/#{game._id}/#{round._id}/enemy", class='vote enemy '+(my_vote ? (my_vote.value == 'enemy' ? 'chosen disabled' : 'strikethrough disabled') : 'active')) 
					.avatar 
						.inner
					h3 #{my_vote && my_vote.value == 'enemy' ? 'you chose enemy' : 'enemy'}
		
			if !game.currentRound
				a.next-round(href="/game/#{game._id}") click here to see the results!
			else if game.currentRound.toString() != round._id.toString()
				a.next-round(href="/game/#{game._id}/#{game.currentRound}") click to visit the current round!
	
		include ../panes