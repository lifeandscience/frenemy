!!!
html(lang="en")
  head
    block head
      meta(charset="utf-8")
      meta(name="viewport", content="width=1070, minimum-scale=0.30")
      title= 'Frenemy: '+title
      //- if(everyauth.loggedIn)
      //  style
      //    body {
      //      padding: 60px 0 0 0;
      //    }
      link(rel='stylesheet', href='http://fast.fonts.com/cssapi/a33e1fc1-4e82-4932-9b7f-6411183d5b4c.css', type='text/css')
      link(rel='stylesheet', href="/bootstrap/css/bootstrap.min.css")
      link(rel='stylesheet', href="/font-awesome/css/font-awesome.css")
      link(rel='stylesheet', href='/css/style.css')
      //Le HTML5 shim, for IE6-8 support of HTML5 elements
      //if lt IE 9
        script(src='/js/modernizr.js')
  body
    - if(everyauth.loggedIn)
      .navbar
        .navbar-inner
          .container
            a.btn.btn-navbar(data-toggle="collapse",data-target=".nav-collapse")
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a.brand(href="/") Frenemy
            .nav-collapse
              - if(everyauth.loggedIn)
                ul.nav
                  li.dropdown
                    a.dropdown-toggle(href="#", data-toggle="dropdown")
                      | Games
                      b.caret
                    ul.dropdown-menu
                      li: a(href="/games") Active Games
                      li: a(href="/games/all") All Games
                      li: a(href="/games/start") Force Start Day
                      li: a(href="/games/end") Force End Day
                  li.dropdown
                    a.dropdown-toggle(href="#", data-toggle="dropdown")
                      | Players
                      b.caret
                    ul.dropdown-menu
                      li: a(href="/players") List Players
                      li: a(href="/players/defending") List Defending Players
                      li: a(href="/players/nondefending") List Non-Defending Players
                      li: a(href="/players/add") Add Player
                      li: a(href="/players/import") Import Players
              ul.nav.pull-right
                li: a(href="/logout") Logout
    div(class="container")
      block messages
        #messages !{flashMessages}
      != body
    block footer
      script(src="//ajax.googleapis.com/ajax/libs/jquery/1.7/jquery.min.js")
      script(src="//ajax.googleapis.com/ajax/libs/jqueryui/1.8/jquery-ui.min.js")
      script(src="/bootstrap/js/bootstrap.min.js")

      script(src="/js/script.js")
