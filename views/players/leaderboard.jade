.content
	.table-container
		table.table.table-striped.table-condensed
			thead
				tr
					th.name
					th.friendliness
						.th-inner Friendly
					th.score
						.th-inner Points
					th.reputation
						.th-inner Reputation
					//th.last-move
					//	.th-inner Last Move
			tbody
				each player, i in players
					tr
						td.name 
							if player._id.toString() == me._id.toString()
								| Your Score
							else
								| #{player.number}
						td.friendliness 
							if player.numVotes > 0
								| #{Math.round((player.friendCount / player.numVotes)*10000)/100}%
							else
								| -
						td.score #{player.score}
						td.reputation
							if player.reputations
								| #{player.reputations[player.reputations.length-1].value}
