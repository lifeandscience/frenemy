#opponent.fade.modal
	.modal-dialog
		.modal-content
			.modal-header
				button.close(type="button", data-dismiss="modal") x
				h3 Today's Opponent:
			.modal-body
				h4 #{game.condition.text}
				h5 Your Opponent: #{their_condition == null || !their_condition.value ? "N/A" : their_condition.value}
				p (You answered: #{my_condition == null || !my_condition.value ? "N/A" : my_condition.value})

#walkaway.fade.modal
	.modal-dialog
		.modal-content
			.modal-header
				button.close(type="button", data-dismiss="modal") x
				h3 End Today's Game?
			.modal-body
				.row
					.col-xs-6.text-center
						//span.glyphicon.glyphicon-log-out
						img(src="/img/icon_leave_big.png")
					.col-xs-6
						h3.blue
							a(href="/game/"+game._id+"/leave") -> Yes
						h3
							a(href="#", data-dismiss="modal") -> No
					.col-xs-12
						p Selecting yes will end todayâ€™s game immediately and your opponent will be notified of your decision.
						p Tomorrow begins a new game.

